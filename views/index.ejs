<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="UTF-8">

 <!-- set viewport to device width to make site responsive -->
 <meta name="viewport" content="width=device-width, initial-scale=1">

 <!-- bootstrap css -->
 <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

 <!-- custom styles -->
 <link rel="stylesheet" type="text/css" href="/styles/style.css">

 <!-- jquery -->
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>

 <!-- bootstrap js -->
 <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

 <!-- custom script -->
 <script type="text/javascript" src="/scripts/app.js"></script>

 <title>betoncharity</title>
</head>
<body>


  <!-- page content -->
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <!-- new game form-->
        <form class="form-inline" id="create-game" method="POST" action="/games">
          <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="Description">
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-default" value="Add Post">
          </div>
        </form>
        <br>


        <!-- list of games -->
        <ul class="list-group" id="games-list">

          <% for (let game of games) { %>
              <li class="list-group-item game" data-id="<%= game._id %>">

                <!-- game label (title) -->
                <a href="/games/<%= game._id %>" class="label label-default"><%= game.title %></a>

                <div class="versus">

                <p><%= game.team1 %>
                <!-- <div class="pull-right"> -->
                  <!-- pencil icon to toggle update form -->
                  <a href="javascript:void(0)" data-toggle="collapse" data-target="#update-<%= game._id %>">
                    <span class="glyphicon glyphicon-ok-sign"></span>
                  </a>
                <!-- </div> -->
                </p>

                <div class="amount-charity">
                  <h1>VS.</h1>

                  <form method="POST" action="/selectCharity">
                      <input type="text" name="amount" value="">
                      <span class="validity"></span>
                      <select name="charities" class="charity_category">
                          <option value="Homless">Homless</option>
                          <option value="Animals">Animals</option>
                          <option value="Prevention">Prevention</option>
                      </select>
                      <input type='submit'name ='charity'>
                  </form>

                </div>

                <p><%= game.team2 %>



                  <!-- pencil icon to toggle update form -->
                  <a href="javascript:void(0)" data-toggle="collapse" data-target="#update-<%= game._id %>">
                    <span class="glyphicon glyphicon-ok-sign"></span>
                  </a>

                </p>

              </div>



                <!-- <%= game._id %> -->
              </li>
            <% } %>
        </ul>
      <!-- </div> -->
    </div>
  </div>
</body>
</html>
