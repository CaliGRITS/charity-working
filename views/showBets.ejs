<script type="text/javascript">
$(document).ready(function() {
        $('td a.delete').click(function(){
          var id = $(this).attr('data-id');
          $.ajax({
            url: '/bets/' + id,
            type: 'DELETE',
            success: function(){
              alert('Bet was deleted');
              window.location.href = '/showbets'
            }
          })
        })

});
</script>
