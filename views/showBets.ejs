<h1>Hey <%=username%>! Thanks for helping support charities!</h1>
<h2>You've bet on the following games:</h2>
<table>
<tr>
  <th>Team</th>
  <th>Charity</th>
  <th>Amount</th>
</tr>

<% for(bet of bets) { %>
  <tr>
    <td><%= bet.team %></td>
    <td><%= bet.charity %></td>
    <td>
      <input type="text" name="" placeholder="<%= bet.amount %>">
      <a class="update" href="javascript:void(0);" data-id="<%= bet.id %>">Update Bet</a>
    </td>
    <td><a class="delete" href="javascript:void(0);" data-id="<%= bet.id %>">Delete Bet</a></td>
  </tr>
<% } %>
</table>
