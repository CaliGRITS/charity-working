<!doctype html>
<html lang="en">
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <title>Betting on Charity</title>
      <!-- Stylesheets -->
      <link rel="stylesheet" href="/styles/style.css">
      <!-- Google Fonts -->
      <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
      <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
      <script src="scripts/js/min/media.match.min.js"></script>
   </head>
   <body>
      <div id="main-wrapper">
         <!-- Start Header -->
         <header id="header" class="fourth-version">
            <div class="container">
            </div>
            <div class="header-navbar col-lg-12 col-md-12 col-sm-12 col-xs-12 clearfix">
               <nav class="navigation">
                 <ul class="list-inline text-center custom-list">
                    <li><a href="/">Home</a></li>
                    <li><a href="/#about">About</a></li>
                    <li><a href="/showbets">My Bets</a></li>
                    <% if(!user) { %>
                    <a href="/signup">Log in/Sign up</a>
                    <% } else { %>
                    <li><a href="/showGames">Games</a></li>
                    <li><div><a href="/logout">Log out</a>
                       <% if(user && user.admin) { %>
                           <a href="/admin/showGames">Admin Portal</a>
                       <% } %>
                   </div></li>
                   <% } %>
                    <hr>
                    <!-- <a href="/signup"><span>Sign up/Log in</span></a> -->
                 </ul>

               </nav>
               <button class="navbar-toggle">
               <i class="fa fa-list"></i>
               </button>
            </div>
      </div>
      </header>
      <!-- list of games -->
      <div id="background-image"><img src=""images/slider/bg2.jpg"></div>
      <ul class="list-group" id="games-list">
         <% for (let game of games) { %>
         <li class="list-group-item game" data-id="<%= game._id %>">
            <div class="versus">
               <img src="/images/<%= game.gameAwayTeam %>-<%= game.gameHomeTeam %>.jpg">
            </div>
            <div class="amount-charity">
               <form method="POST" action="/">
                  <span class="currencyinput">$</span><input type="number" name="amount" value="1" min="1" required placeholder"bet amount">
                  <span class="validity"></span>
                  <select name="charity" class="charity_category">
                     <option value="Homeless">Homeless</option>
                     <option value="Animals">Animals</option>
                     <option value="Prevention">Prevention</option>
                  </select>
                  <select name="team" class="team-selector">
                     <!-- //https://stackoverflow.com/questions/8605516/default-select-option-as-blank -->
                     <option disabled selected value> -- select a team -- </option>
                     <option value="<%= game.gameAwayTeam %>"><%= game.gameAwayTeam %></option>
                     <option value="<%= game.gameHomeTeam %>"><%= game.gameHomeTeam %></option>
                  </select>
                  <div>
                     <input type="hidden" name="gameId" value=<%= game._id %>>
                     <input class="submit" type='submit'>
               </form>
               </div>
         </li>
         <% } %>
      </ul>
      </div>
      </div>
   </body>
</html>
